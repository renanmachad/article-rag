{
    "compilerOptions": {
      "target": "ES2024",
      "module": "NodeNext",
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist"
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
  }